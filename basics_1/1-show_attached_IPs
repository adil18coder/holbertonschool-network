#!/usr/bin/env bash
# 1-show_attached_IPs: sistemdə aktiv olan bütün IPv4 ünvanlarını göstərir

# Əgər ifconfig komandası mövcuddursa
if command -v ifconfig >/dev/null 2>&1; then
    # IPv4 ünvanlarını çıxarır
    ifconfig | grep -oP '(?<=inet\s)\d+(\.\d+){3}'
else
    # Əgər ifconfig yoxdursa, xəta mesajı göstərir
    echo "Xəta: ifconfig tapılmadı" >&2
    exit 1
fi
