#!/usr/bin/env bash
# 0-change_your_home_IP: safely change localhost and facebook.com resolution

# Backup /etc/hosts
sudo cp /etc/hosts /etc/hosts.bak

# Remove existing entries for localhost and facebook.com, then append new ones
sudo grep -vE 'localhost|facebook\.com' /etc/hosts | sudo tee /etc/hosts > /dev/null
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null

echo "Changes applied. /etc/hosts updated."
